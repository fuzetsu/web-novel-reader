{
  "name": "novel-chapter-fetch",
  "version": "1.0.0",
  "description": "easily read web novels multiple chapters at a time (optimized for ios read screen)",
  "main": "src/index.tsx",
  "author": "fuzetsu",
  "dependencies": {
    "preact": "^10.11.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^9",
    "typescript": "^5.0.4",
    "vite": "^5.1.1",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint .",
    "dev": "vite"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "dist/*"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ]
      }
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
